{% extends 'layout.html.twig' %}
{% block head_extra %}
<link rel="stylesheet" href="/assets/css/engine/scene-add.css">
{% endblock %}
{% block content %}
<main id="main-add-scene">
    <nav>
        <a href="/story/engine/show?id={{ story_id }}" id="back-scenes">
            <img src="/assets/images/icones/story.svg" alt="plow icon"> Scènes
        </a>
        <a href="/" id="home">
            <img src="/assets/images/icones/home.svg" alt="plow icon"> Home
        </a>
    </nav>
    <section id="container">
        <h1>Ajouter une scène</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="title">
                <label for="name"> Nom : </label>
                <input type="text" name="name" id="name" maxlength="35">
            </div>
            <div class="background">
                <label for="background"> Arrière-plan : </label>
                <input type="file" name="background" id="background">
            </div>
            <input type="submit" id="submit">
        </form>
    </section>
</main>
{% endblock %}
